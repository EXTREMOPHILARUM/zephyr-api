{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zephyr API",
  "version": "0.3.0",
  "identifier": "com.zephyrapi.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zephyr API",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "windows": ["main"],
          "permissions": [
            "dialog:allow-save",
            "fs:allow-write-text-file"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 24
    },
    "iOS": {
      "developmentTeam": "68HQ622QG5",
      "minimumSystemVersion": "13.0"
    }
  }
}
